<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaska.oxyzonegym.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/cardio"
        android:padding="15dp"
        android:id="@+id/logo"
    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/logo"
        android:src="@drawable/gym"
        android:id="@+id/gym"
        />
    <TextView
        android:id="@+id/GymText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_below="@id/gym"
        android:textColor="#FFFFFF"
        android:text="Oxizone Fitness &amp; Spa"
        android:background="@color/colorPrimary"
        android:textSize="30sp"
        android:typeface="sans"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:src="@drawable/placeholder"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/GymText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/AddressText"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Site No. 1, Sector 70, Sahibzada Ajit Singh Nagar"
        android:textColor="#000000"
        android:layout_toRightOf="@id/location"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd"
        android:layout_below="@id/GymText"
        tools:ignore="RtlCompat" />
    <ImageView
        android:id="@+id/phoneIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/phone"
        android:layout_below="@id/location"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PhoneText"
        android:layout_marginBottom="30dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:text="0172 221 7151"
        android:layout_toRightOf="@id/phoneIcon"
        android:layout_below="@id/location"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat"
        />
    <ImageView
        android:id="@+id/InternIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/internet"
        android:layout_below="@id/phoneIcon"
        android:layout_margin="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WebpageText"
        android:layout_margin="30dp"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:text="oxizonefitness.com"
        android:layout_toRightOf="@id/phoneIcon"
        android:layout_below="@id/phoneIcon"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        tools:ignore="RtlCompat"
        />

</RelativeLayout>
